{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": true,
        "target": "es5",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "inlineSources": true,

        // Set `sourceRoot` to  "/" to strip the build path prefix
        // from generated source code references.
        // This improves issue grouping in Sentry.
        "sourceRoot": "/",

        "module": "ESNext",
        "moduleResolution": "Node"
    },
    "include": ["./src/**/*"]
}
